    <body>
        <div class="login__container">
            <div class="navbar navbar-expand-lg navbar-dark bg-dark navbar__login">
                <div class="navbar-nav">
                    <a class="nav-link link__logout" onclick="logout()">Logout</a>
                </div>
            </div>
            <img src="/home__bg2.jpg" />
            <div class="row home__block">
            <div class="col-sm"></div>
